            <div class="col-8">
                <div class="row my-5">
                    <div class="col-4">
                        <label for="form-label">{{label}}</label>
                        <input placeholder="{{placeholder}}" class="form-control">
                        <div class="form-text text-danger">{{caption}}</div>
                    </div>
                    {{/with}}
                    {{#with name}}
                    <div class="col-4">
                        <label for="form-label">{{label}}</label>
                        <input placeholder="{{placeholder}}" class="form-control">
                        <div class="form-text text-danger">{{caption}}</div>
                    </div>
                </div>
                {{/with}}
                {{#with phone}}
                <div class="row g-">
                    <div class="col-4">
                        <label for="form-label">{{label}}</label>
                        <input placeholder="{{placeholder}}" class="form-control">
                        <div class="form-text text-danger">{{caption}}</div>
                    </div>
                    {{/with}}
                    {{#with email}}
                    <div class="col-4">
                        <label for="form-label">{{label}}</label>
                        <input placeholder="{{placeholder}}" class="form-control">
                        <div class="form-text text-danger">{{caption}}</div>
                    </div>
                </div>

                <div class="row g-">
                    <div class="col-3">
                        {{#each action_block}}
                        {{#with ../action_block}}
                        {{text}}

                        {{!-- <div class="alert alert-primary">
                            <button class="btn btn-primary ">{{text}}</button>
                            <button class="btn btn-primary ">Click me!</button>
                            <button class="btn btn-primary ">Click me!</button>
                        </div> --}}
                        {{/with}}
                        {{/each}}
                    </div>
                </div>



                {{/with}}
                {{/with}}


                <hr class="m-5">


                <div class="col-8">
                    {{#each switch}}
                    <div class="form-check form-switch my-5">
                        <label class="form-check-label">{{text}}</label>
                        <input name={{text}} type="checkbox" class="form-check-input">
                    </div>
                    {{!-- {{/with}} --}}
                    {{/each}}
                </div>
                {{!-- {{/with}} --}}
                {{/with}}

    </section>

    {{/with}}
    <div class="row">
        <div class="col 8">
            <div>
                {{#with delivery}}
                {{title}}
                {{#each select}}
                <label class="form-label">{{label}}</label>
                <option>{{placeholder}}</option>
                <select class="form-select">
                    {{#each options}}


