<main class="p-5">
    <h1>{{name}}</h1>
    <h4 class="my-5"><span class="badge bg-secondary">{{description}}</span></h4>


    <button type="button" class="btn btn-outline-dark">{{history.year}}</button>
    <button type="button" class="btn btn-outline-dark">{{history.founder}}</button>

    <br>
    <br>

    {{#with types}}
    <button type="button" class="btn btn-outline-dark">{{this}}</button>
    {{/with}}

    <hr class="my-5">
    {{#with syntax}}
    <ul>
        <li><button type="button" class="btn btn-primary">{{variables}}</button></li><br>
        <li><button type="button" class="btn btn-primary">{{functions}}</button></li><br>
        <li><button type="button" class="btn btn-primary">{{conditionals}}</button></li><br>
        <li><button type="button" class="btn btn-primary">{{loops}}</button></li><br>
        <li><button type="button" class="btn btn-primary">{{classes}}</button></li>
    </ul>
    {{/with}}

    <hr class="my-5">
    {{#with features}}
    <h3>{{this}}<span class="badge bg-secondary"></span></h3>
    {{/with}}
    <hr class="my-5">
    {{#with libraries}}
    <h4><span class="badge bg-secondary">{{this}}</span></h4>
    {{/with}}
    <hr class="my-5">
    {{#with tools}}
    <h3>{{this}}<span class="badge bg-secondary"></span></h3>
    {{/with}}
    <hr class="my-5">
    {{#each community}}
    <ul>
        <li class="my-5"><button type="button" class="btn btn-primary">{{name}}</button></li>
        <li class="my-5"><button type="button" class="btn btn-danger">{{type}}</button></li>
    </ul>
    {{/each}}
</main>