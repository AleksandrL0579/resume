<main class="p-5">

    <section class="m-5">
        {{#with navigation}}
        <div class="col-9">
            <div class="row">
                <div class="col-12">
                    <ol class="breadcrumb">
                        {{#with links.[0]}}
                        <div class="breadcrumb-item"><a href={{href}}>{{text}}</a></div>
                        {{/with}}
                        {{#with links.[1]}}
                        <div class="breadcrumb mx-5"><a href={{href}}>{{text}}</a></div>
                        {{/with}}
                        {{#with links.[2]}}
                        <div class="breadcrumb-item"><a href={{href}}>{{text}}</a></div>
                        {{/with}}
                        {{#with links.[2]}}
                        <div class="breadcrumb mx-5"><a href={{#if href}} {{text}} {{/if}}></a>Disabled</div>
                        {{/with}}
                        {{#if href}} {{text}} {{/if}}
                    </ol>
                </div>
            </div>
        </div>
        {{/with}}
    </section>

    <hr class="m-5">

    <section class="m-5">
        <div class="row">
            <div class="col-8">
                {{#with formBlock}}
                <h1>{{header}}</h1>
                <div>
                    {{#with rating}}
                    {{title}} {{value}}
                    {{/with}}
                </div>

                <div class="row mt-3">
                    <div class="col-12">
                        <div class="nav nav-tabs">
                            {{#with actionBlock}}
                            {{#with tabs.[0]}}
                            <div class="nav-item">
                                <a href="#" class="nav-link">{{text}}</a>
                            </div>
                            {{/with}}
                            {{#with tabs.[1]}}
                            <div class="nav-item">
                                <a href="#" class="nav-link">{{text}}</a>
                            </div>
                            {{/with}}
                            {{#with tabs.[2]}}
                            <div class="nav-item">
                                <a href="#" class="nav-link active">{{text}}</a>
                            </div>
                            {{/with}}
                        </div>
                    </div>
                </div>

                <hr class="m-5">

                {{#with report}}
                <div class="card my-3">
                    <div class="card-body">
                        <h5 class="mt-2">{{title}}</h5>
                        {{#with button}}
                        <div>
                            <a href={{link}} class="btn btn-secondary mt-2">{{text}}</a>
                        </div>
                        {{/with}}
                    </div>
                </div>

                {{/with}}

                {{/with}}
                <hr class="m-5">

                {{#with feedbackBlock}}
                <h2>{{title}}</h2>
                <div class="row mt-5">
                    {{#with buttons.[0]}}
                    <div class="col-4">
                        <a href={{link}}
                            class="btn {{#if isWarning}}btn-outline-light{{else}}btn-warning{{/if}} btn-warning m-2">{{text}}</a>
                    </div>
                    {{/with}}
                    {{#with buttons.[1]}}
                    <div class="col-4">
                        <a href={{link}}
                            class="btn {{#if isSuccess}}btn-outline-light{{else}}btn-success{{/if}} btn-success m-2">{{text}}</a>
                    </div>
                    {{/with}}
                    {{#with buttons.[2]}}
                    <div class="col-4">
                        <a href={{link}}
                            class="btn {{#if isDanger}}btn-outline-light{{else}}btn-success{{/if}} btn-danger m-2">{{text}}</a>
                    </div>
                    {{/with}}
                </div>
                {{/with}}
            </div>
            <div class="col-3">
                {{#with goodsInfo}}
                <div>
                    <div class="card">
                        <div class="card-body">
                            {{!-- <img class="card-img-top" with="100px" src={{photo}} alt="photo"> --}}
                            <div class=" ps-1 pt-1">
                                <img src="{{photo}}" alt="alt" class="img-fluid-start">
                            </div>
                            <h5 class="mt-5">{{name}}</h5>


                        </div>
                    </div>
                </div>
                <div>
                    <div class="card my-3">
                        <div class="card-body">
                            <h5 class="">{{price}}</h5>
                            {{#if inMarket}} <p> Е в наявностi </p> {{/if}}
                            <div class="col-8">
                                {{#each buttons}}
                                <div>
                                    <button
                                        class="btn {{#if isPrimary}}btn-primary{{else}}btn-secondary{{/if}} mt-2">{{text}}</button>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="card my-3">
                        <div class="card-body">
                            {{#with seller}}
                            <h6>{{title}}: {{value}}</h6>
                            {{/with}}
                        </div>
                    </div>
                </div>
                {{/with}}
            </div>




            {{/with}}

        </div>
    </section>
    <hr class="m-5">

