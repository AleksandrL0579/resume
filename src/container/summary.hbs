{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div class="p-2">

    <main>
        {{#with main}}
        <section>
            {{#with summary}}
            {{>title data='Summary' big=true }}
            <div class="mt-3">
                <p>{{text}}</p>
            </div>
            {{/with}}
        </section>


        <section class="mt-5">
            {{#with experience}}
            {{>title data='Other experience'}}
            <div class="mt-3">
                <p>{{text}}</p>
            </div>
            {{/with}}
        </section>
    </main>
    {{/with}}


</div>

